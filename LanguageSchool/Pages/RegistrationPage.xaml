<Page x:Class="LanguageSchool.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Почта</TextBlock>
            <TextBox x:Name="EmailTb"></TextBox>
            <TextBlock>Телефон</TextBlock>
            <TextBox x:Name="PhoneTb"></TextBox>
            <Button x:Name="EntryBtn" Click="EntryBtn_Click">Далее</Button>
        </StackPanel>
    </Grid>
</Page>
